					<div class="col-lg-3 mb-4 text-center">
						<div class="product-entry border">
							<a href="#" class="prod-img">
								<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTLuCNPy6ruKI6Ee66UOYlxk8L8KwpFxtDDMV2F9tKmuQIWfe_-" class="img-fluid" alt="Free html5 bootstrap 4 template">
							</a>
							<div class="desc">
								<h2><%= product.pName %></h2>
								<span class="price"><%= product.pPrice %></span>
								
							</div>
							<div class="row">
								<br>
								<br>
                                <div class="col"> <a href="/shop/<%= product.pid %>" class="btn btn-success">Details</a></div>
                                <div class="col"> <a href="" class="btn btn-primary btn-addtocart"><i class="icon-shopping-cart"></i>&nbsp;Add to cart</a></div>
                                
								<!-- <div class="col"><button type="button" class="btn btn-success">Details</button></div>
								<div class="col"><button type="button" class="btn btn-success">Buy</button></div> -->
							</div>
							<div class="row">
								<br>
							</div>
						</div>
                    </div>
                    
					<% } %>
<!-- 					
					<div class="w-100"></div>
		
					<div class="w-100"></div>
			
					<div class="w-100"></div> -->
		
				</div>
