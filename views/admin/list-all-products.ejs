<%- include('../layout/admin-header.ejs'); %>
<%- include('../layout/admin-navbar.ejs'); %>

<div class="card mainContainerDeatils">
        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
                <div class="mdc-card">
                <table id="data_table" class=" table nowrap data-table table-responsive display " style="width:100%" cellspacing="0"  id="data_table">
                    <thead >
                    <tr class="table_head">
                        <th>Sr.No</th>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Product Description</th>
                        <th colspan="2">Action</th>
                        </tr>
                    </thead>
                    <thead class="theadx">
                        <tr>
                            <th>Sr.No</th>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Product Description</th>
                            <th colspan="2">Action</th>
                        </tr>  
                    </thead>
                     <tbody  class="bodytable">
                        <% for (let product of prods) {%> 
                         <tr>  
                                <td><%= product._id %></td>
                                <td><%= product._id %></td>
                                <td><%= product.pName %></td>
                                <td><%= product.pPrice %></td>
                                <td><%= product.pDescription %></td>                              
                                <td>
                                <form action="/admin/add-product" method="GET">
                                    <input type="text" id="productid" name="productid" value="<%= product._id %>" hidden>
                                    <button type="submit" class="form-control btn btn-primary">EDIT</button>
                                 </form>
                                 </td>
                                 <td>
                                 <form action="/admin/delete-product" method="GET">
                                    <input type="text" id="pid" name="pid" value="<%= product._id %>" hidden>
                                    <button type="submit" class="form-control btn btn-danger">Delete</button>
                                 </form>
                                </td>
                         </tr>
                         <% } %>
                     </tbody>
                </table>
  
                </div>
        </div>   

    </div>
</div>
  <%- include('../layout/admin-footer.ejs'); %>    